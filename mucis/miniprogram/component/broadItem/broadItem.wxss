/* component/broadItem/broadItem.wxss */
.broad-item{
  width:320rpx;
  height: 320rpx;
  display: flex;
  justify-content: center;
  align-content: center;
  background-size: 100% 100%;
  position: relative;
  border-radius: 10px;
}
.broad-item text{
  color:rgb(255, 240, 249);
  align-items: stretch;
  position: absolute; 
  margin-top: 260rpx;
  z-index: 1;
  font-size: 22px;
  
}
.broad-item::after{
  position: absolute;
  width: 100%;
  height: 20%;
  content: '';
  background-color: #290f4173;
  border-radius: 10px;
  margin-top: 258rpx;
}