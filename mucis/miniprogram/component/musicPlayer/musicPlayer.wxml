<!--component/musicPlayer/musicPlayer.wxml-->
<view class="player" bindtap="handleClick">
  <!-- <audio poster="{{song.poster}}" name="{{song.name}}" author="{{song.author}}" src="{{song.src}}" id="myAudio" controls loop>
  </audio> -->
  <view class="p-left">
    <image class="{{playState== 1?'music-pic playing':'music-pic paused'}}" mode="aspectFit" src="{{musicPic}}" role=""></image>
    <view class="music-info">
      <text class="music-name">{{musicName}}</text>
      <text class="music-artist">{{artistName}}</text>
    </view>
  </view>
  <view class="p-right">
    <image src="{{playState == 1?'../../image/musicPlayer/pause.svg':'../../image/musicPlayer/start.svg'}}" mode='aspectFit'></image>
  </view>
</view>